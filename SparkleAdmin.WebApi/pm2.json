{
  "apps": {
    "name": "malusapi",
    "script": "dotnet",
    "exec_mode": "fork",
    "error_file": "logs/err.log",
    "out_file": "logs/out.log",
    "merge_logs": true,
    "log_date_format": "YYYY-MM-DD HH:mm:ss",
    "min_uptime": "60s",
    "max_restarts": 30,
    "autorestart": true,
    "restart_delay": "60",
    "args": [
      "SparkleAdmin.WebApi.dll",
      "--urls=http://*:5004"
    ],
    "env": {
      "ASPNETCORE_ENVIRONMENT": "Production"
    }
  }
}